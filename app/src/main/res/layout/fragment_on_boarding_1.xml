<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="?attr/backgroundColor"
    tools:context=".OnBoardingFragment_1">

    <!-- Background animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_onBoarding_1_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/silo_dark"
        android:visibility="invisible" />



    <FrameLayout
        android:id="@+id/unityContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:translationY="180dp"
        android:background="@color/black"/>


    <!-- Typing TextView -->
    <TextView
        android:id="@+id/textTyping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:layout_gravity="bottom|center_horizontal"
        android:translationY="-150dp"
        android:text=""
        android:textAlignment="center" />

    <!-- Swipe Lottie -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_swipe"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom|center_horizontal"
        android:scaleType="fitXY"
        android:translationY="80dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/swipe_up_light" />

</FrameLayout>
